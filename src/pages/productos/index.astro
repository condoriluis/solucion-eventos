---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ProductSearch from "@/components/products/ProductSearch";
import { products } from "@/data/products";
---

<BaseLayout
    title="Productos"
    description="Catálogo completo de productos para alquiler: carpas, mesas, sillas, manteles y más."
    keywords={[
        "productos",
        "catálogo",
        "alquiler",
        "carpas",
        "mesas",
        "sillas",
    ]}
>
    <main class="min-h-screen py-12 bg-background">
        <div class="container mx-auto px-4">
            <div class="text-center max-w-3xl mx-auto mb-12">
                <h1 class="text-4xl md:text-6xl font-bold mb-4">
                    Nuestros Productos
                </h1>
                <p class="text-lg text-muted-foreground">
                    Equipamiento de alta calidad para hacer de tu evento algo
                    memorable
                </p>
            </div>

            <ProductSearch products={products} client:load />
        </div>
    </main>
</BaseLayout>
