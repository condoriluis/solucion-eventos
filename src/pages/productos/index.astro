---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { products } from "@/data/products";
---

<BaseLayout
    title="Productos"
    description="Catálogo completo de productos para alquiler: carpas, mesas, sillas, manteles y más."
    keywords={[
        "productos",
        "catálogo",
        "alquiler",
        "carpas",
        "mesas",
        "sillas",
    ]}
>
    <main class="min-h-screen py-24 bg-background">
        <div class="container mx-auto px-4">
            <div class="text-center max-w-3xl mx-auto mb-16">
                <h1 class="text-4xl md:text-6xl font-bold mb-4">
                    Nuestros Productos
                </h1>
                <p class="text-lg text-muted-foreground">
                    Equipamiento de alta calidad para hacer de tu evento algo
                    memorable
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {
                    products.map((product) => (
                        <a
                            href={`/productos/${product.slug}`}
                            class="group rounded-2xl overflow-hidden border bg-card hover:shadow-lg transition-shadow"
                        >
                            <div class="aspect-video overflow-hidden">
                                <img
                                    src={product.images[0]}
                                    alt={product.name}
                                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                                />
                            </div>
                            <div class="p-6">
                                <h3 class="text-xl font-bold mb-2">
                                    {product.name}
                                </h3>
                                <p class="text-muted-foreground text-sm mb-4">
                                    {product.description}
                                </p>
                                <div class="flex items-center justify-between">
                                    <span class="text-2xl font-bold text-primary">
                                        Bs. {product.price}
                                    </span>
                                    <span class="text-sm text-muted-foreground">
                                        Stock: {product.stock}
                                    </span>
                                </div>
                                <ul class="mt-4 space-y-1">
                                    {product.features.map((feature) => (
                                        <li class="text-sm text-muted-foreground flex items-center gap-2">
                                            <svg
                                                class="w-4 h-4 text-primary"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M5 13l4 4L19 7"
                                                />
                                            </svg>
                                            {feature}
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </main>
</BaseLayout>
